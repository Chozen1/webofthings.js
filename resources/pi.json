  "links":{
    "product": {
      "id" : "https://www.raspberrypi.org/products/raspberry-pi-2-model-b/",
      "description" : "Product this Web Thing is based on"
    },
    "system":{
      "id": "system",
      "customFields":{
        "firmwareVersion": "4.0",
        "upSince": "2015-10-31T23:59:59.000Z",
        "_connections":{  
          "ip": "198.39.3.2",
          "port": 8484,
          "rootUrl": "http://localhost:8484/",
          "publicUrl": "http://devices.webofthings.io/"       
        },
        "_identifiers":{
          "serialNumber":"AX2332-00021",
          "ean":"9399392392"
        }
      }
    },
    "properties": [
      {
        "id":"temperature",
        "name": "Temperature Sensor",
        "description": "An ambient temperature sensor.",
        "values":{
          "temp":{
            "name":"Temperature sensor",
            "description":"The temperature in celsius",
            "unit":"celsius",
            "value": 0,
            "customFields":{
              "gpio": 21
            },
          }
        },
        "tags":["sensor","public","temperature"]
      },
      {
        "id":"humidity",
        "name": "Humidity Sensor",
        "description": "An ambient humidity sensor.",
        "values":{
          "h":{
            "name":"Humidity",
            "description":"Percentage of Humidity",
            "unit": "%",
            "value": 0,
            "customFields":{
              "gpio": 21
            },
          }
        },
        "tags":["sensor","public"]
      },
      {
        "id":"pir",
        "name": "Passive Infrared",
        "description": "A passive infrared sensor.",
        "values":{
          "p":{
            "name":"Presence",
            "description":"Current sensor value (true=motion detected)",
            "type":"boolean",
            "value": false,
            "customFields":{
              "gpio": 20
            },
          }
        },
        "tags":["sensor","public"]
      },
      {
        "id":"leds",
        "name": "LEDs",
        "description": "The LEDs of this device.",
        "values":{
          "1": {
            "name": "LED 1",
            "value": false,
            "customFields":{
              "gpio": 17
            },
          },
          "2": {
            "name": "LED 2",
            "value": false,
            "customFields":{
              "gpio": 19
            },
          }
        },
        "tags":["sensor","public"]
      }
    ],
    "events": [
      {
        "id":"deviceError",
        "name":"Device Error",
        "description":"Triggered when the device ",
        "values":{
          "error":{
            "type":"String"
          }
        },
        "customFields":{
          "status":"active"
        } 
      },
      {
        "id":"batteryLow",
        "name":"Low Battery",
        "description":"Triggered once when battery drops below 2.8v.",
        "values":{
          "state":{
            "type":"String",
            "enum":{
              "REPLACE":"It's time to replace the battery.",
              "CRITICAL":"This device will die anytime soon"
            } 
          }
        },
        "customFields":{
          "status":"active"
        } 
      },
      {
        "id":"motionDetected",
        "name":"Motion Sensor Triggered",  
        "description":"Triggered once when the PIR sensor detects motion.",
        "values":{
          "state":{
            "type":"Boolean"
          }
        }
      }
    ],
    "actions":[
      {
        "id":"displayText",
        "name":"Display text on the LCD screen",  
        "description":"Triggered once when the PIR sensor detects motion.",
        "values":{
          "text":{
            "type":"String",
            "required":true
          },
          "delay":{
            "type":"Integer",
            "minValue":30,
            "maxValue":1800,
            "unit":"seconds"
          }
        }
      }
    ],
    "meta": {
      "link": "http://w3c.org/schemas/webthing/",
      "title": "Metadata"
    },
    "help": {
      "link": "http://webofthings.org/docs/pi/",
      "title": "Documentation"
    },
    "ui": {
      "link": "ui/",
      "title": "User Interface"
    }
  }
